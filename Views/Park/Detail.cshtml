@model ParkRec.ViewModels.ParkDetailViewModel

<h1>@Model.Name</h1>

<table class="table">
    <tr>
        <th>Location</th>
        <td>@Model.Location</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Tags</th>
        <td>@Model.TagText</td>
    </tr>

</table>

<a asp-controller="Tag" asp-action="AddPark" asp-route-id="@Model.ParkId">Add Tags</a>
<form asp-controller="SavePark" asp-action="Save" asp-route-id="@Model.ParkId" method="post">
    <input type="hidden" value="@Model.ParkId" name="ParkId"/>
    <input type="hidden" value="UserId" name="UserId"/>
    <input type="submit" value="Save Park" />
</form>

@model ParkRec.ViewModels.AddParkTagViewModel

<h1>Add Tag to Park: @Model.Park.Name</h1>

<form asp-controller="Tag" asp-action="AddPark" method="post">
    <input type="hidden" value="@Model.Park.Id" name="ParkId" />
    <div class="form-group">
        <label asp-for="TagId">Tag</label>
        <select asp-for="TagId" asp-items="Model.Tags"></select>
        <span asp-validation-for="TagId"></span>
    </div>
    <input type="submit" value="Add Tag" />
</form>
